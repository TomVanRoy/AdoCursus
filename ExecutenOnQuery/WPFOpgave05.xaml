<Window x:Class="Taken.WPFOpgave05"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taken"
        mc:Ignorable="d"
        Title="WPFOpgave05" Height="180" Width="300" MinHeight="180" MinWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="labelSoort" Content="Soort:" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="textBoxSoort" Grid.Column="1" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Margin="10" />
        <Button x:Name="buttonBereken" Content="Bereken gemiddelde kostprijs" HorizontalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Width="auto" Padding="5" Click="buttonBereken_Click" />
        <Label x:Name="labelStatus" Content="" HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" />
    </Grid>
</Window>