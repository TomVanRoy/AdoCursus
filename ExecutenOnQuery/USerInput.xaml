<Window x:Class="Taken.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taken"
        mc:Ignorable="d"
        Title="UserInput" Height="240" Width="240" MinHeight="240" MinWidth="240">
    <StackPanel Margin="20">
        <TextBlock Text="Oude leverancier nummer:" />
        <TextBox x:Name="TextBoxOldLev" />
        <TextBlock Text="Nieuwe leverancier nummer:" Margin="0,20,0,0" />
        <TextBox x:Name="TextBoxNewLev" />
        <Button Content="OK" Click="OKButton_Click" Margin="0,50,0,0" />
    </StackPanel>
</Window>